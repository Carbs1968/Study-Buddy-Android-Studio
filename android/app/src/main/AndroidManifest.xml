<!-- android/app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions required by your features -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Foreground service (general + microphone type for newer Android) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <!-- Optional: notifications if your service posts them (safe to keep) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:label="Study Buddy"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- Standard Flutter entry activity (no custom MainActivity needed) -->
        <activity
            android:name="io.flutter.embedding.android.FlutterActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Tells Android we're using Flutter embedding v2 -->
            <meta-data
                android:name="flutterEmbedding"
                android:value="2" />
        </activity>

        <!-- Your foreground recorder service (fully-qualified name) -->
        <service
            android:name="com.carbs.studybuddy.study_buddy.RecorderService"
            android:exported="false"
            android:foregroundServiceType="microphone|mediaProjection|dataSync" />
        <!-- Note: keep 'microphone' for recording; the others are harmless if unused -->

    </application>
</manifest>